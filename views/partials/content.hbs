<form class="comment-form">
  <div class="post-user-data">
    <span class="post-user-img">
      {{currentUser.initial}}
    </span>
    <div class="post-user-name">
      <p class="name">{{currentUser.username}}</p>
    </div>
  </div>
  <textarea placeholder="Post comment to {{foundGroup.group_name}}..." name="content" id="comment" cols="30" rows="5"></textarea>

  <button id="{{foundGroup.id}}-{{currentUser.id}}" type="submit" class="send-btn" >Post</button>
 
</form>
<div class="posts-container">
